<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.ReviewMapper">

    <resultMap type="Review" id="reviewMap">
    	<id column="review_id" property="reviewId" />
    	<result column="mem_code" property="memCode" />
    	<result column="entity_type" property="entity.entityType" />
    	<result column="entity_id" property="entity.entityId" />
    	<result column="rating" property="rating" />
    	<result column="review_text" property="reviewText" />
    	<result column="review_date" property="reviewDate" />
	</resultMap>

    <!-- 리뷰 작성 -->
    <insert id="insertReview" parameterType="Review">
        INSERT INTO review (mem_code, title, entity_type, entity_id, rating, review_text)
        VALUES (#{memCode}, #{title}, #{entityType}, #{entityId}, #{rating}, #{reviewText})
    </insert>

    <!-- 특정 엔티티(식당 또는 숙소)의 리뷰 목록 조회 -->
    <select id="getReviewByEntity" parameterType="ReviewEntity" resultMap="reviewMap">
        SELECT * FROM review
        WHERE entity_type = #{entityType} 
        AND entity_id = #{entityId} 
        ORDER BY review_date DESC
    </select>

    <!-- 특정 회원이 작성한 리뷰 목록 조회 -->
    <select id="getReviewByMember" parameterType="int" resultMap="reviewMap">
        SELECT * FROM review
        WHERE mem_code = #{memCode} 
        ORDER BY review_date DESC
    </select>

    <!-- 특정 엔티티의 평균 평점 조회 -->
    <select id="getAverageRatingByEntity" parameterType="ReviewEntity" resultType="double">
        SELECT AVG(rating) FROM review 
        WHERE entity_type = #{entityType} 
        AND entity_id = #{entityId}
    </select>

</mapper>
